modules = ["nodejs-18", "web", "python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
NODE_ENV = "development"
PORT = "3000"
API_VERSION = "v1"
JWT_SECRET = "development-secret-key-change-in-production"
JWT_EXPIRES_IN = "7d"
CORS_ORIGIN = "http://localhost:5000"
FRONTEND_URL = "http://localhost:5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Dev Server"

[[workflows.workflow]]
name = "Frontend Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["npm", "run", "build:frontend"]
publicDir = "frontend/dist"
