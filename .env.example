# ================================
# BreakApp Environment Variables
# Development Configuration
# ================================

# -----------------
# Node Environment
# -----------------
NODE_ENV=development

# -----------------
# Database (PostgreSQL)
# -----------------
POSTGRES_USER=breakapp
POSTGRES_PASSWORD=breakapp_dev_password
POSTGRES_DB=breakapp_db
POSTGRES_PORT=5432

# Full Database URL (used by Prisma and backend)
DATABASE_URL=postgresql://breakapp:breakapp_dev_password@localhost:5432/breakapp_db?schema=public

# -----------------
# Redis Cache
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=breakapp_redis_password
REDIS_URL=redis://:breakapp_redis_password@localhost:6379

# -----------------
# Backend API
# -----------------
BACKEND_PORT=3001
API_BASE_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------
# Frontend Application
# -----------------
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# -----------------
# PgAdmin (Database Management UI)
# -----------------
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@breakapp.local
PGADMIN_PASSWORD=admin

# -----------------
# Redis Commander (Redis Management UI)
# -----------------
REDIS_COMMANDER_PORT=8081

# -----------------
# Email Service (SMTP)
# -----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=BreakApp <noreply@breakapp.com>

# -----------------
# SMS Service (Twilio)
# -----------------
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------
# Payment Gateways
# -----------------

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Egyptian Payment Gateways
# Vodafone Cash
VODAFONE_CASH_MERCHANT_ID=your-merchant-id
VODAFONE_CASH_API_KEY=your-api-key

# Orange Money
ORANGE_MONEY_MERCHANT_ID=your-merchant-id
ORANGE_MONEY_API_KEY=your-api-key

# InstaPay
INSTAPAY_MERCHANT_ID=your-merchant-id
INSTAPAY_API_KEY=your-api-key

# -----------------
# AI Services
# -----------------

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# OpenAI (Optional)
OPENAI_API_KEY=sk-your-openai-api-key

# -----------------
# File Storage
# -----------------
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# AWS S3 (Optional - for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=breakapp-uploads

# -----------------
# Monitoring & Logging
# -----------------

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Log Level
LOG_LEVEL=debug

# -----------------
# Security
# -----------------
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# Session Secret
SESSION_SECRET=your-session-secret-min-32-chars

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-encryption-key-32-chars-exactly

# -----------------
# Feature Flags
# -----------------
ENABLE_WEATHER_RECOMMENDATIONS=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_EMOTION_TRACKING=true
ENABLE_MEDICAL_ALERTS=true
ENABLE_EMERGENCY_MODE=true
ENABLE_NUTRITION_TRACKING=true

# -----------------
# External APIs
# -----------------

# Weather API
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Maps API (Google Maps)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# -----------------
# WebSocket Configuration
# -----------------
WS_PORT=3001
WS_PATH=/socket.io

# -----------------
# Cron Jobs & Background Tasks
# -----------------
ENABLE_CRON_JOBS=true
REMINDER_INTERVAL_MINUTES=30
CLEANUP_INTERVAL_HOURS=24

# -----------------
# Testing
# -----------------
TEST_DATABASE_URL=postgresql://breakapp:breakapp_test_password@localhost:5432/breakapp_test_db?schema=public
TEST_REDIS_URL=redis://:breakapp_test_password@localhost:6380

