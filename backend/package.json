{
  "name": "breakapp-backend",
  "version": "1.0.0",
  "description": "BreakApp Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:unit": "jest --selectProjects unit --passWithNoTests",
    "test:integration": "jest --selectProjects integration --passWithNoTests",
    "test:e2e": "jest --selectProjects e2e --passWithNoTests --runInBand",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit --maxWorkers=2 --passWithNoTests",
    "test:verbose": "jest --verbose --passWithNoTests",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "node prisma/seed.js",
    "db:seed:emotion": "node prisma/seed-emotion.js",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^10.32.1",
    "@tensorflow/tfjs": "^4.15.0",
    "@tensorflow/tfjs-node": "^4.15.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "qrcode": "^1.5.3",
    "stripe": "^20.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.22.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "api",
    "backend",
    "express"
  ],
  "author": "",
  "license": "MIT"
}
