{
  "name": "breakapp-backend",
  "version": "1.0.0",
  "description": "BreakApp Backend - Arabic Food Ordering API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node dist/server.js",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "jest tests/security --coverage",
    "test:system": "jest tests/integration/system.test.js",
    "test:load": "echo 'Install artillery: npm install -g artillery' && artillery run tests/load/artillery.config.js",
    "test:all": "npm run test:security && npm run test:system && npm test",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix"
  },
  "dependencies": {
    "agenda": "^5.0.0",
    "archiver": "^6.0.1",
