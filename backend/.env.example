# BreakApp Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/breakapp?schema=public"

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=info

# Standard Meal Cost (in currency)
STANDARD_MEAL_COST=50

# Geographic Search
DEFAULT_SEARCH_RADIUS=3
MAX_SEARCH_RADIUS=10

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Monitoring (Sentry)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0
APP_RELEASE=

# Google Maps (ETA calculation - optional)
GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_TRAVEL_MODE=driving
DEFAULT_DELIVERY_SPEED_KMH=30

# Jobs
REVIEW_JOB_INTERVAL_HOURS=24

# Recommendation Settings
RECOMMENDATION_CACHE_TTL=3600
MAX_RECOMMENDATIONS_PER_TYPE=5

# Push Notifications (Firebase Cloud Messaging)
PUSH_NOTIFICATIONS_ENABLED=true
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_PROJECT_ID=your_firebase_project_id

# SMS Notifications (Twilio)
SMS_ENABLED=true
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Notifications (SMTP)
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=BreakApp <noreply@breakapp.com>

# Order Reminders
REMINDER_ENABLED=true
REMINDER_INTERVAL=30
REMINDER_START_TIME=08:00
REMINDER_END_TIME=10:00

# Cron Jobs
ENABLE_CRON_JOBS=true

# QR Code
QR_SECRET_KEY=your_qr_secret_key_change_in_production
APP_BASE_URL=http://localhost:3000

# Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Phase 4 Innovation Features - المميزات المتقدمة للمرحلة الرابعة

# Voice Processing - معالجة الصوت
VOICE_ENABLED=true
SPEECH_TO_TEXT_API_KEY=your_speech_to_text_api_key
TEXT_TO_SPEECH_API_KEY=your_text_to_speech_api_key
VOICE_LANGUAGE_SUPPORT=ar,en
VOICE_MODEL_TRAINING_ENABLED=true

# Medical Data Encryption - تشفير البيانات الطبية
MEDICAL_DATA_ENCRYPTION_KEY=your_256_bit_encryption_key_change_in_production
MEDICAL_DATA_ENABLED=true
HIPAA_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=true

# Emergency Mode - وضع الطوارئ
EMERGENCY_MODE_ENABLED=true
EMERGENCY_RESPONSE_TIME_MINUTES=15
EMERGENCY_NOTIFICATION_CHANNELS=sms,email,push
EMERGENCY_CONTACT_ADMIN=admin@breakapp.com
EMERGENCY_CONTACT_PHONE=+1234567890

# Export System - نظام التصدير
EXPORT_ENABLED=true
EXPORT_MAX_FILE_SIZE_MB=50
EXPORT_FORMATS=pdf,excel,csv
EXPORT_RETENTION_DAYS=30

# Integration APIs - واجهات التكامل
INTEGRATION_ENABLED=true
WEBHOOK_SECRET_KEY=your_webhook_secret_key
API_RATE_LIMIT_PER_HOUR=1000
EXTERNAL_API_TIMEOUT_MS=30000
