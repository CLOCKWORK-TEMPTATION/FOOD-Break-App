{
  "name": "breakapp",
  "version": "1.0.0",
  "description": "BreakApp - Food ordering and delivery management system for production teams",
  "private": true,
  "workspaces": [
    "backend",
    "mobile"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=mobile",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:mobile": "npm run start --workspace=mobile",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test --workspace=backend",
    "test:unit:watch": "npm run test:watch --workspace=backend",
    "test:unit:coverage": "npm run test --workspace=backend -- --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:report": "playwright show-report e2e-report"
  },
  "keywords": [
    "food-delivery",
    "production",
    "menu-management",
    "restaurant"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0"
  }
}
